            <form enctype="multipart/form-data" asp-action="AddNewMember">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="f_account" class="control-label" required></label>
                            <input asp-for="f_account" class="form-control" />
