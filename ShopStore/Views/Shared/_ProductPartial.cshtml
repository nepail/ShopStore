@model ShopStore.ViewModels.ProductDetailViewModel

@{
}

<link href="~/css/Products/_ProductPartial.css" rel="stylesheet" />

<div id="prodetailCard" class="mb-3" style="max-width: auto; width:auto; height:550px">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img id="prodetailCard-img" src="/images/@Model.ImgPath" class="card-img" alt="...">
            <div align="center" style="margin-top: 20px">
                <div style="padding:15px 30px 15px 30px">
                    <p class="l-grey" style="line-height:3px">商品類型：@Model.Type</p>
                    <p class="l-grey">售價：NT$ @Model.Price</p>
                    <input class="btn btn-sm btn-outline-primary" type="button" value="加到我的購物車" data-id="@Model.Id" onclick="AddtoCart(this)"/>
                    <input class="btn btn-sm btn-outline-info" type="button" value="加入我的收藏" />
                </div>                
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-body">                
                <h5 id="prodetailCard-title" class="card-title"><b>@Model.Name</b></h5>
                <p id="prodetailCard-content" class="card-text" style="font-size: 15px">
                    @Html.Raw(@Model.Content)
                </p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
    </div>
</div>